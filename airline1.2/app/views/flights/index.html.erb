<p id="notice"><%= notice %></p>



<h1> <%= t ".title" %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t ".Destination" %></th>
      <th><%= t ".Time" %></th>
      <th><%= t ".Date" %></th>
      <th><%= t ".placesB" %></th>
      <th><%= t ".placesS" %></th>
      <th><%= t ".priceB" %></th>
      <th><%= t ".priceS" %></th>
      <th><%= t ".priceL" %></th>
      <th><%= t ".priceP" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  >
    <% @flights.each do |flight| %>
      <tr class="<%= cycle('list_line_odd','list_line_even')%>" >
        <td><%= flight.destination %></td>
        <td><%= flight.time.hour %>: <%= flight.time.min %></td>
        <td><%= flight.date %></td>
        <td><%= flight.placesBus %></td>
        <td><%= flight.placesStan %></td>
        <td><%= flight.priceBus %></td>
        <td><%= flight.priceStan %></td>
        <td><%= flight.priceLag %></td>
        <td><%= flight.pricePriv %></td>
        <td><%= link_to 'Show', flight %></td>
        <% if current_user.try(:admin?) %>
            <td><%= link_to "Edit", edit_flight_path(flight) %></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>


<% if current_user.try(:admin?) %>
    <%= link_to "New Flight", new_flight_path%>
<%end%>

<br>

